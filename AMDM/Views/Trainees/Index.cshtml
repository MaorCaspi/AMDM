@model IEnumerable<AMDM.Models.Trainee>

@{
    ViewData["Title"] = "Index";
}

<h1>Trainees</h1>

<form asp-action="Search">

    <input name="query" id="query" autocomplete="off" placeholder="Search trainings..." />


    @*<label for="cars">filter by date:</label>
        <select id="date-filter" type="submit" value="Search by dates...">
                <option name="dateFilter" value="today">Today</option>
                <option name="dateFilter" value="tomorrow">Tomorrow</option>
                <option name="dateFilter" value="week">This week</option>
                <option name="dateFilter" selected="selected" value="all">All Dates</option>
            </select>*@
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TraineeGender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TraineeGender)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts
{
    <script src="~/js/trainee-search.js"></script>


    <script type="text/html" id="hidden-template-search-resulte">
        <tr>
            <td>
                {firstName}
            </td>
            <td>
                {lastName}
            </td>
            <td>
                {id}
            </td>
            <td>
                {dateOfBirth}
            </td>
            <td>
                {height}
            </td>
            <td>
                {weight}
            </td>
            <td>
                {email}
            </td>
            <td>
                {password}
            </td>
            <td>
                {phoneNumber}
            </td>
            <td>
                {traineeGender}
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="{id}">Edit</a> |
                <a asp-action="Details" asp-route-id="{id}">Details</a> 
                @*<a asp-action="Delete" asp-route-id="{id}">Delete</a>*@
            </td>
        </tr>
    </script>
}
