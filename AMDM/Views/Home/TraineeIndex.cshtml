@model AMDM.Models.Trainee

@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http;

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

<div id="contectDiv" class="text-center">


    <h1 class="display-4">
        Welcome @Context.Session.GetString("Name")
    </h1>
    <hr />
    <div>
        <div id="profileDiv" style="display: none;" class="card display-4">
            <div class="card-body">
                <h5 class="card-title">Profile</h5>
                <a asp-controller="Trainees" asp-action="Details" asp-route-id="@Context.Session.GetString("Id")" class="btn btn-primary">My Profile</a>
            </div>
        </div>
        <div class="card display-4">
            <div class="card-body">

                @if (Context.Session.GetString("Type") == UserType.Trainer.ToString())
                {
                    <h5 class="card-title">Add training</h5>
                    <a asp-controller="Trainings" asp-action="Create">+</a>
                }
                @if (Context.Session.GetString("Type") == UserType.Trainee.ToString())
                {
                    @if (Model.Ticket.ExpiredDate > DateTime.Now.Date)
                    {
                        <h5 class="card-title">Register to training</h5>
                        <a asp-controller="Trainings" asp-action="Index">+</a>
                    }
                }

            </div>
        </div>
        <div class="card display-4">
            <div class="card-body">
                <h5 class="card-title"></h5>
                @if (Model.Ticket.ExpiredDate > DateTime.Now.Date)
                {
                    <h5 id="expired-date-ticket" class="card-title">your ticket is valid until: @Model.Ticket.ExpiredDate.Date.ToShortDateString()</h5>
                }
                else
                {
                    <h5 class="card-title">
                        You do not have a ticket , to purchase a ticket
                        <a asp-controller="TicketTypes" asp-action="Index">click here</a>
                    </h5>
                }

            </div>
        </div>   
        @if (Model.Trainings.FindAll(training => training.Date >= DateTime.Now.Date && training.Date < DateTime.Now.AddDays(7).Date).Count() > 0)
        {
            <h5 class="card-title">Your workouts this week:</h5>
            @foreach (var item in Model.Trainings)
            {
                @if (item.Date >= DateTime.Now.Date && item.Date < DateTime.Now.AddDays(7).Date)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.TrainingType.Name)</h5>
                            <h6 class="card-subtitle mb-2 text-muted"><strong>Trainer:</strong> @Html.DisplayFor(modelItem => item.Trainer.FirstName)</h6>
                            <p class="card-text"> @Html.DisplayFor(modelItem => item.Date) @Html.DisplayFor(modelItem => item.Time)</p>
                            <p class="card-text"><strong>Studio:</strong> @Html.DisplayFor(modelItem => item.Studio)</p>
                            <p class="card-text"><strong>Places left:</strong> @Html.DisplayFor(modelItem => item.MaxRegisterTrainees)</p>
                            <a name="unregister" class="unregister card-link btn btn-danger" href="#" training-id="@item.Id">Unregister</a>
                        </div>
                    </div>
                }
            }

        }
        else
        {
            <h5 class="card-title">you dont have trainings this week</h5>
        }

    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@section Scripts
{
    <script src="~/js/ticket.js"></script>
    <script src="~/js/unregister.js"></script>
}