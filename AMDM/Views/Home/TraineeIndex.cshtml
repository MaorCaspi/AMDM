@model AMDM.Models.Trainee

@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http;

<div class="text-center">


    <h1 class="display-4">
        Welcome @Context.Session.GetString("Name")
    </h1>
    <hr />
    <div>
        <div class="card display-4">
            <div class="card-body">
                <h5 class="card-title">Profile</h5>
                <a asp-controller="Trainees" asp-action="Details" asp-route-id="@Context.Session.GetString("Id")" class="btn btn-primary">My Profile</a>
            </div>
        </div>
        <div class="card display-4">
            <div class="card-body">
                <h5 class="card-title">Add training</h5>
                @if (Context.Session.GetString("Type") == UserType.Trainer.ToString())
                {
                    <a asp-controller="Trainings" asp-action="Create">+</a>
                }
                @if (Context.Session.GetString("Type") == UserType.Trainee.ToString())
                {
                    <a asp-controller="Trainings" asp-action="Index">+</a>
                }

            </div>
        </div>
        <div class="card display-4">
            <div class="card-body">
                <h5 class="card-title"></h5>
                @if (Model.Ticket != null)
                {
                    <h5 id="expired-date-ticket" class="card-title">your ticket is valid until: @Model.Ticket.ExpiredDate</h5>
                }
                else
                {
                    <h5 class="card-title">
                        You do not have a ticket , to purchase a ticket
                        <a asp-controller="TicketTypes" asp-action="Index">click here</a>
                    </h5>
                }

            </div>
        </div>
        @if (Model.Trainings != null)
        {
            <h5 class="card-title">Your workouts this week:</h5>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainings[0].TrainingType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainings[0].Trainer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainings[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainings[0].Time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainings[0].Studio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainings[0].MaxRegisterTrainees)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Trainings)
                    {
                        @if (item.Date >= DateTime.Now.Date && item.Date < DateTime.Now.AddDays(7).Date)
                         {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrainingType.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Trainer.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Time)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Studio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaxRegisterTrainees)
                                </td>
                                <td>
                                    <a name="register" class="register" href="#" trainee-id="@item.Id">Register</a> |
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                         }
                     }
                </tbody>
         </table>
        }
        else
            {
                <h5 class="card-title">you dont have trainings this week</h5>
            }

    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@section Scripts
{
    <script src="~/js/ticket.js"></script>
}