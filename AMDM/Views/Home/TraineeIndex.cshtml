@model AMDM.Models.Trainee

@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http;

<div id="contectDiv" class="text-center">


    <h1 class="display-4">
        Welcome @Context.Session.GetString("Name")
    </h1>
    <hr />
    <div>
        <div id="profileDiv" style="display: none;" class="card display-4">
            <div class="card-body">
                <h5 class="card-title">Profile</h5>
                <a asp-controller="Trainees" asp-action="Details" asp-route-id="@Context.Session.GetString("Id")" class="btn btn-primary">My Profile</a>
            </div>
        </div>
        <div class="card display-4">
            <div class="card-body">
                <h5 class="card-title">Add training</h5>
                @if (Context.Session.GetString("Type") == UserType.Trainer.ToString())
                {
                    <a asp-controller="Trainings" asp-action="Create">+</a>
                }
                @if (Context.Session.GetString("Type") == UserType.Trainee.ToString())
                {
                    <a asp-controller="Trainings" asp-action="Index">+</a>
                }

            </div>
        </div>
        <div class="card display-4">
            <div class="card-body">
                <h5 class="card-title"></h5>
                @if (Model.Ticket != null)
                {
                    <h5 id="expired-date-ticket" class="card-title">your ticket is valid until: @Model.Ticket.ExpiredDate</h5>
                }
                else
                {
                    <h5 class="card-title">
                        You do not have a ticket , to purchase a ticket
                        <a asp-controller="TicketTypes" asp-action="Index">click here</a>
                    </h5>
                }

            </div>
        </div>
        @if (Model.Trainings != null)
        {
            <h5 class="card-title">Your workouts this week:</h5>
            @foreach (var item in Model.Trainings)
            {
                @if (item.Date >= DateTime.Now.Date && item.Date < DateTime.Now.AddDays(7).Date)
                {
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title"><strong>Traning type:</strong> @Html.DisplayFor(modelItem => item.TrainingType.Name)</h5>
                            <h6 class="card-subtitle mb-2 text-muted"><strong>Trainer name:</strong> @Html.DisplayFor(modelItem => item.Trainer.Id)</h6>
                            <p class="card-text"><strong>Starts at:</strong> @Html.DisplayFor(modelItem => item.Date) @Html.DisplayFor(modelItem => item.Time)</p>
                            <p class="card-text"><strong>Studio:</strong> @Html.DisplayFor(modelItem => item.Studio)</p>
                            <p class="card-text"><strong>Places left:</strong> @Html.DisplayFor(modelItem => item.MaxRegisterTrainees)</p>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="card-link btn btn-danger">Un Register</a>
                        </div>
                    </div>
                }
            }
               
        }
else
        {
            <h5 class="card-title">you dont have trainings this week</h5>
        }

    </div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@section Scripts
{
    <script src="~/js/ticket.js"></script>
}