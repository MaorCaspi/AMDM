@model IEnumerable<AMDM.Models.TicketType>

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Http;

<h1>Index</h1>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Search">

    <input name="query" id="query" autocomplete="off" placeholder="Search tickets..." />
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<div class="alert-section">



</div>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PunchingHolesNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PunchingHolesNumber)
            </td>
            <td>
                @if (Context.Session.GetString("Type") == UserType.Trainee.ToString())
                {
                    <div>
                        <a href="#" class="purchase" trainee-id="@Context.Session.GetString("Id")" ticketType-id="@item.Id">Purchase</a>|
                    </div>
                }
                @if (Context.Session.GetString("Type") == UserType.Admin.ToString())
                {
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>|
                    </div>
                }

                <a asp-action="Details" asp-route-id="@item.Id">Details</a>

            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts
{
    <script src="~/js/purchase.js"></script>
    <script src="~/js/ticket-type-search.js"></script>
    <script type="text/html" id="hidden-template-search-resulte">
        <tr>
            <td>
                {name}
            </td>
            <td>
                {price}
            </td>
            <td>
                {punchingHolesNumber}
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="{id}">Edit</a> |
                <a asp-action="Details" asp-route-id="{id}">Details</a> |
                <a asp-action="Delete" asp-route-id="{id}">Delete</a>
            </td>
        </tr>
    </script>
    <script type="text/html" id="hidden-template-purchase-error-alert">
        <div class="alert alert-danger" role="alert">
            {error}
        </div>
    </script>
    <script type="text/html" id="hidden-template-purchase-success-alert">
        <div class="alert alert-primary" role="alert">
            {message}
        </div>
    </script>
}
