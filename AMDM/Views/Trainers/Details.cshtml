@model AMDM.Models.Trainer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainerGender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainerGender)
        </dd>
    </dl>
</div>
@if (Model.Trainings.FindAll(training => training.Date <= DateTime.Now.Date).Count() > 0)
{
    <h5 class="card-title">Your past workouts:</h5>
    @foreach (var item in Model.Trainings)
    {
        @if (item.Date <= DateTime.Now.Date)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.TrainingType.Name)</h5>
                    <h6 class="card-subtitle mb-2 text-muted"><strong>Trainer:</strong> @Html.DisplayFor(modelItem => item.Trainer.FirstName)</h6>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.Date) @Html.DisplayFor(modelItem => item.Time)</p>
                    <p class="card-text"><strong>Studio:</strong> @Html.DisplayFor(modelItem => item.Studio)</p>
                    <a asp-controller="Trainings" asp-action="Delete" asp-route-id="@item.Id">Delete</a>|
                    <a asp-controller="Trainings" asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
                    <a asp-controller="Trainings" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
        }
    }

}
else
{
    <h5 class="card-title">You don't have past trainings</h5>
}

@if (Model.Trainings.FindAll(training => training.Date >= DateTime.Now.Date).Count() > 0)
{
    <h5 class="card-title">Your future workouts:</h5>
    @foreach (var item in Model.Trainings)
    {
        @if (item.Date >= DateTime.Now.Date)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.TrainingType.Name)</h5>
                    <h6 class="card-subtitle mb-2 text-muted"><strong>Trainer:</strong> @Html.DisplayFor(modelItem => item.Trainer.FirstName)</h6>
                    <p class="card-text"> @Html.DisplayFor(modelItem => item.Date) @Html.DisplayFor(modelItem => item.Time)</p>
                    <p class="card-text"><strong>Studio:</strong> @Html.DisplayFor(modelItem => item.Studio)</p>
                    <p class="card-text"><strong>Places left:</strong> @Html.DisplayFor(modelItem => item.MaxRegisterTrainees)</p>
                    <a asp-controller="Trainings" asp-action="Delete" asp-route-id="@item.Id">Delete</a>|
                    <a asp-controller="Trainings" asp-action="Edit" asp-route-id="@item.Id">Edit</a>|
                    <a asp-controller="Trainings" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
        }
    }

}
else
{
    <h5 class="card-title">You don't have future trainings</h5>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
