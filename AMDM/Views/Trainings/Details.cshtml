@model AMDM.Models.Training

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Training</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trainer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trainer.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Studio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxRegisterTrainees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxRegisterTrainees)
        </dd>
    </dl>
</div>

<br />
<br />
<h3>The trainees who signed up for this training:</h3>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Id Trainee
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Trainee Gender
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Trainee trainee in Model.Trainees)
        {
            <tr>
                <td>
                    @trainee.Id
                </td>
                <td>
                    @trainee.FirstName
                </td>
                <td>
                    @trainee.LastName
                </td>
                <td>
                    @trainee.PhoneNumber
                </td>
                <td>
                    @trainee.TraineeGender
                </td>
            </tr>
        }
    </tbody>
</table>







































